# ---- [Data Manipulation & Processing] ----
library(dplyr)        # Manipulasi data (filter, select, mutate, summarise, join)
library(tidyr)        # Transformasi data (spread, gather, separate, unite)
library(tibble)       # Struktur data frame yang lebih modern dan fleksibel
library(tidyverse)    # Kumpulan package untuk data science (termasuk dplyr, tidyr, ggplot2, dll.)
library(lubridate)    # Pemrosesan data waktu dan tanggal
library(reshape2)     # Reshape data dari wide ke long format dan sebaliknya

# ---- [Data Visualization] ----
library(ggplot2)      # Library utama untuk visualisasi data berbasis grammar of graphics
library(ggtext)       # Menambahkan elemen teks kaya (rich text) ke dalam ggplot
library(ggforce)      # Ekstensi tambahan untuk ggplot2 (facet, garis lengkung, dll.)
library(ggalluvial)   # Visualisasi data kategori dalam bentuk diagram aliran
library(ggbump)       # Membuat bump chart untuk membandingkan ranking dari waktu ke waktu
library(ggridges)     # Membuat ridge plot (density plot bertumpuk)
library(ggrepel)      # Menghindari label yang saling bertumpukan dalam ggplot
library(ggiraphExtra) # Membuat visualisasi interaktif dengan ggplot2
library(GGally)       # Ekstensi ggplot2 untuk membuat pair plots dan matriks visualisasi

# ---- [Color & Themes] ----
library(viridis)      # Skema warna yang ramah bagi individu dengan buta warna
library(scales)       # Mengatur skala (axis, legend) dalam ggplot2
library(showtext)     # Mempermudah penggunaan font kustom dalam ggplot2

# ---- [Table & Report Formatting] ----
library(knitr)        # Membantu dalam pembuatan laporan dinamis (R Markdown)
library(DT)           # Membuat tabel interaktif dalam HTML menggunakan DataTables
library(waffle)       # Membuat diagram waffle (chart berbasis kotak)

# ---- [Interactive & Specialized Visualization] ----
library(networkD3)    # Membuat diagram jaringan interaktif menggunakan D3.js
library(plotly)       # Membuat visualisasi interaktif berbasis ggplot2
library(calendR)      # Membuat kalender visual untuk data berbasis waktu

# ---- [Statistical Analysis & Modeling] ----
library(fmsb)         # Membuat radar chart dan analisis statistik sederhana
library(devtools)     # Digunakan untuk mengembangkan dan menginstal package dari GitHub

library(treemapify)
library(ggwordcloud)
library(circlize)

